block pageInfo
  - let title = "Default Title";

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title

    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&family=Rubik+Mono+One&display=swap", rel="stylesheet")
    link(href="css/main.css", rel="stylesheet")

    <meta name="theme-color" content="#3a30f8" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  body
    include ../assets/sprite.svg
    include ../include/_header

    main.page-main
      block content

    include ../include/_side-nav
    include ../include/_footer

    script(src="js/header.js")
    script(src="js/video.js")
    script(src="js/slider.js")

