section.intro#intro

  figure._wrapper.container

    +createVideo("intro", "photo1")

    figcaption._text
      svg(role="img", focusable="false", width="0", height="0")._decorative.decorative
        use(xlink:href="#logo__gear")

      h1._headline.arrow-anchor
        | #{product.company}<br>
        svg(width="20", height="72", role="img", focusable="false").arrow.intro__arrow
          polyline(points="0,71 17,71 17,3", stroke-width="1").__line
          circle(cx="17" cy="3" r="1.5").__pointer
        | #{product.line}<br>
        b.product__ver= product.ver

      p._subheader Маневренность, легкость, экологичность
      a(href="#features")._scroll-down Листать вниз
        svg(role="img", focusable="false", width="12", height="96")
          use(xlink:href="#icon-down")
