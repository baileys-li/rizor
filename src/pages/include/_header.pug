header.page-header

  nav.main-nav.container

    a(href="#intro").logo._logo= "Логотип " + companyName + ", наверх"
      // 2 separate svg for easy animation
      svg(role="img", focusable="false" width="40", height="40")._img
        use(xlink:href="#logo__gear")
      svg(role="img", focusable="false", width="114", height="29")._text
        use(xlink:href="#logo__text")

    button._toggle
      svg(viewBox="0 0 100 100", width="20", height="20").hamburger
        rect(x="0", y="0", width="100%", height="20%", rx="5%")._top
        rect(x="0", y="40%", width="100%", height="20%", rx="5%")._middle
        rect(x="0", y="80%", width="100%", height="20%", rx="5%")._bottom

    ul._list
      each val, key in navItems
        li._item
          a(href=key)._link= val
